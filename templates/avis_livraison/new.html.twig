{% extends 'utilisateur/index.html.twig' %}

{% block title %}New AvisLivraison{% endblock %}

{% block body %}
    <h1>Create new AvisLivraison</h1>

    {{ include('avis_livraison/_form.html.twig') }}

    <a href="{{ path('app_avis_livraison_index') }}">back to list</a>
    <script>
        // Sélectionner tous les champs du formulaire
        const formFields = document.querySelectorAll('.form-control');

        // Écouter les événements de saisie sur chaque champ du formulaire
        formFields.forEach(field => {
            field.addEventListener('input', function() {
                // Vérifier si le champ est valide
                if (this.checkValidity()) {
                    // Champ valide : appliquer la classe 'is-valid' et retirer la classe 'is-invalid'
                    this.classList.remove('is-invalid');
                    this.classList.add('is-valid');
                } else {
                    // Champ invalide : appliquer la classe 'is-invalid' et retirer la classe 'is-valid'
                    this.classList.remove('is-valid');
                    this.classList.add('is-invalid');
                }
            });
        });

    </script>
{% endblock %}

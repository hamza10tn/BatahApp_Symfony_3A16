{% extends 'front.html.twig' %}
{% block title %}Login{% endblock %}
{% block main %}
    <section class="our-log bgc-f9">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-lg-6 col-xl-5">
                    <div class="login_form mt60-sm">
                        <h2 class="title">Sign in</h2>
                        <form action="{{ path('update_password') }}" method="post" id="login_form">

                            <div class="col-lg-6">
                                <div class="form-group mb20">
                                    <label class="form-label">Password</label>
                                    <input type="password" class="form-control" name="password" id="password">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group mb20">
                                    <label class="form-label">Confirm Password</label>
                                    <input type="password" class="form-control" name="confirm_password" id="confirm_password">
                                </div>
                            </div>


                            <button type="submit" class="btn btn-log btn-thm mt5">Sign in</button>
                        </form>
                    </div>
                </div>
            </div>

        </div>

        {% block jsControle %}
            <script src="{{ asset('js/SignUPControl.js') }}"></script>
        {% endblock %}

    </section>


{% endblock %}
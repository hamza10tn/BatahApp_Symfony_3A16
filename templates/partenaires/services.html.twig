{% extends 'utilisateur/index.html.twig' %}

{% block title %}services affecter{% endblock %}

{% block body %}

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>ID</th>
                <th>Description</th>
            </tr>
            </thead>
            <tbody>
            {% for service in services %}
                <tr>
                    <td>{{ service.idService }}</td>
                    <td>{{ service.description }}</td>

                    <td>
                        <a href="{{ path('app_service_apres_vente_show', {'idService': service.idService}) }}">Show</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">Aucun enregistrement trouv√©</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <a href="javascript:history.go(-1)" class="btn btn-primary">BACK</a>
    </div>
{% endblock %}



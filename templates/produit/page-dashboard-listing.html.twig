{% extends 'base.html.twig' %}

{% block title %}Show Product{% endblock %}

{% block pane %}
<div class="d-flex justify-content-between align-items-center mb-3">
<h1>PRODUCT</h1>
<div class="d-flex">
<form method="get" action="{{ path('app_back_affiche') }}" class="mb-3">
<div class="input-group">
    <input type="text" class="form-control" placeholder="Rechercher un produit" name="search" >
    <button class="btn btn-outline-primary" type="submit">Rechercher</button>
</div>
</form>
        
        <!-- Add the PDF button -->
        <a href="{{ path('app_generate') }}" class="btn btn-success">Generate PDF</a>
</div>
</div>
<div class="col-lg-12 mt-4">
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-light">
                <tr>
                    <th scope="col">Labelle</th>
                    <th scope="col">Description</th>
                    <th scope="col">Période de Garantie</th>
                    <th scope="col">Type</th>
                    <th scope="col">Statut</th>
                <th scope="col">Localisation</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for prod in products %}
                <tr>
                    <td>
                        <div class="d-flex align-items-center">
                        <div class="product-thumbnail me-3">
                        {% if prod.photo %}
                            <img src="{{ asset('uploads/' ~ prod.photo) }}" alt="{{ prod.photo }}" class="img-fluid" style="max-width: 100px; height: auto;">
                        {% else %}
                            <img src="{{ asset('uploads/defaultimage.jpg') }}" alt="Default Image" class="img-fluid" style="max-width: 100px; height: auto;">
                        {% endif %}
                    </div>
                            <div>
                                <h6 class="mb-0">{{ prod.labelle }}</h6>
                            <span class="text-muted">{{ prod.prix | number_format(0, '.', ',') }} TND</span>
                        </div>
                        </div>
                    </td>
                    <td>{{ prod.description }}</td>
                    <td>{{ prod.periodeGarantie }} months</td>
                    <td>{{ prod.type }}</td>
                    <td>{{ prod.status ? 'Actif' : 'Inactif' }}</td>
                    <td>{{ prod.localisation }}</td>
                        <td>
                            <div class="d-flex button-group">
                        <a href="{{ path('app_details_produit', {'idp': prod.idProduit()}) }}" data-bs-toggle="tooltip" data-bs-placement="top" title="Visualiser" class="me-2 btn btn-custom"><i class="fas fa-eye"></i></a>
                        <a href="{{ path('app_modifier_produit', {'idp': prod.idProduit}) }}" data-bs-toggle="tooltip" data-bs-placement="top" title="Modifier" class="me-2 btn btn-custom"><i class="fas fa-edit"></i></a>
                    {#    <a href="{{ path('app_supprimer', {'idp': prod.idProduit}) }}" data-bs-toggle="tooltip" data-bs-placement="top" title="Supprimer" class="btn btn-custom"><i class="fas fa-trash"></i></a>  #}
                   
<a href="{{ path('app_supprimer', {'idp': prod.idProduit}) }}" onclick="showDeleteMessage()" data-bs-toggle="tooltip" data-bs-placement="top" title="Supprimer" class="btn btn-custom"><i class="fas fa-trash"></i> Supprimer</a>
<div id="floatingMessage" class="floating-message alert alert-danger" style="display: none;">Le produit a été supprimé avec succès.</div>


                    </div>
                    
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>



        <a href="{{ path('exportExcel') }}">
            <button type="button" style="float: right;padding: 10px;margin-left: 10px;" class="btn btn-outline-secondary">Exporter Excel</button>
                </a>
         <a href="{{ path('exportpdf') }}">
            <button type="button" style="float: right;padding: 10px;" class="btn btn-outline-info">Export to PDF</button>
                </a>
            <a href="{{ path('tri') }}">
             <button type="button" style="float: left;padding: 10px;margin-right: 10px;" class="btn btn-outline-info">tri croissant</button>
                </a>
              <a href="{{ path('trid') }}">
              <button type="button" style="float: left;padding: 10px;" class="btn btn-outline-info">tri decroissant</button>
             </a>
             <a href="{{ path('stat') }}">
                                    <button type="button" style="float: left;padding: 10px; margin-right: 10px;" class="btn btn-outline-info">statistique</button>
                                </a>
    </div>
</div>
<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        {% for page in 1..totalPages %}
            <li class="page-item {% if page == currentPage %}active{% endif %}">
                <a class="page-link" href="{{ path('app_back_affiche', {'page': page}) }}">{{ page }}</a>
            </li>
        {% endfor %}
    </ul>
</nav>

<div class="text-center mt-4">
    <a href="{{ path('app_produit') }}" class="btn btn-primary">Ajouter un produit</a>
</div>


<script>
    

    function showDeleteMessage() {
        var floatingMessage = document.getElementById("floatingMessage");
        floatingMessage.style.display = "block";
        setTimeout(function() {
            floatingMessage.style.display = "none";
        }, 3000); // Masquer le message après 3 secondes (3000 millisecondes)
    }
</script>

<style>
    .btn-custom {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        text-decoration: none;
        border: 1px solid #007bff; /* couleur de la bordure */
        border-radius: 10px; /* bordure arrondie */
        padding: 12px 24px; /* padding des boutons */
        margin: 0 5px;
        color: #007bff; /* couleur du texte */
        background-color: transparent; /* couleur de fond transparente */
        transition: background-color 0.3s ease, color 0.3s ease; /* transition de couleur */
        font-size: 18px; /* taille de la police */
    }
    
    .btn-custom:hover {
        background-color: #007bff; /* couleur de fond au survol */
        color: #fff; /* couleur du texte au survol */
    }
    
    .btn-custom i {
        margin-right: 10px; /* espace entre l'icône et le texte */
    }
    

    .floating-message {
    position: fixed;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    z-index: 1000;
    width: 300px;
    text-align: center;
}


</style>

   
{% endblock %}
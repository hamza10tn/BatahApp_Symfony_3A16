{% extends 'base.html.twig' %}

{% block title %}Show Produits{% endblock %}

{% block pane %}
<div class="d-flex justify-content-between align-items-center mb-3">
<h1>PRODUCT</h1>
<div class="d-flex">
<form method="get" action="{{ path('app_back_affiche') }}" class="mb-3">
<div class="input-group">
    <input type="text" class="form-control" placeholder="Rechercher un produit" name="search" value="#">
    <button class="btn btn-outline-primary" type="submit">Rechercher</button>
</div>
</form>
        
        <!-- Add the PDF button -->
        <a href="{{ path('app_generate') }}" class="btn btn-success">Generate PDF</a>
</div>
</div>
<div class="col-lg-12 mt-4">
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-light">
                <tr>
                    <th scope="col">Labelle</th>
                    <th scope="col">Description</th>
                    <th scope="col">PÃ©riode de Garantie</th>
                    <th scope="col">Type</th>
                    <th scope="col">Statut</th>
                <th scope="col">Localisation</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for prod in products %}
                <tr>
                    <td>
                        <div class="d-flex align-items-center">
                        <div class="product-thumbnail me-3">
                        {% if prod.photo %}
                            <img src="{{ asset('uploads/' ~ prod.photo) }}" alt="{{ prod.photo }}" class="img-fluid" style="max-width: 100px; height: auto;">
                        {% else %}
                            <img src="{{ asset('uploads/defaultimage.jpg') }}" alt="Default Image" class="img-fluid" style="max-width: 100px; height: auto;">
                        {% endif %}
                    </div>
                            <div>
                                <h6 class="mb-0">{{ prod.labelle }}</h6>
                            <span class="text-muted">{{ prod.prix | number_format(0, '.', ',') }} TND</span>
                        </div>
                        </div>
                    </td>
                    <td>{{ prod.description }}</td>
                    <td>{{ prod.periodeGarantie }} months</td>
                    <td>{{ prod.type }}</td>
                    <td>{{ prod.status ? 'Actif' : 'Inactif' }}</td>
                    <td>{{ prod.localisation }}</td>
                        <td>
                        <div class="d-flex">
                            <a href="{{ path('app_details_produit', {'idp': prod.getidproduit()}) }}" data-bs-toggle="tooltip" data-bs-placement="top" title="Visualiser" class="me-2"><i class="fas fa-eye"></i></a>
                            <a href="{{ path('app_modifier_produit', {'idp': prod.idProduit}) }}" data-bs-toggle="tooltip" data-bs-placement="top" title="Modifier" class="me-2"><i class="fas fa-edit"></i></a>
                            <a href="{{ path('app_supprimer', {'idp': prod.idProduit}) }}" data-bs-toggle="tooltip" data-bs-placement="top" title="Supprimer"><i class="fas fa-trash"></i></a>
                        </div>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        {% for page in 1..totalPages %}
            <li class="page-item {% if page == currentPage %}active{% endif %}">
                <a class="page-link" href="{{ path('app_back_affiche', {'page': page}) }}">{{ page }}</a>
            </li>
        {% endfor %}
    </ul>
</nav>

<div class="text-center mt-4">
    <a href="{{ path('app_produit') }}" class="btn btn-primary">Ajouter un produit</a>
</div>

   
{% endblock %}
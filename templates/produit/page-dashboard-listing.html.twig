{% extends 'base.html.twig' %}

{% block title %}Show Produits{% endblock %}
  
{% block pane %}
<div class="col-lg-12 mt50">
    <div class="tab-content row" id="nav-tabContent">
        <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
            <div class="col-lg-12">
                <div class="table-responsive my_lisging_table">
                    <table class="table">
                        <thead class="table-light">
                            <tr class="thead_row">
                                <th class="thead_title pl20" scope="col">Labelle</th>
                                <th class="thead_title" scope="col">Description</th>
                                <th class="thead_title" scope="col">PeriodeGarentie</th>
                                <th class="thead_title" scope="col">Type</th>
                                <th class="thead_title" scope="col">Status</th>
                                <th class="thead_title" scope="col">Action</th>
                            </tr>
                        </thead>
                        {% for prod in products %}
                        <tbody>
                            <th class="align-middle pl20" scope="row">
                                <div class="car-listing bdr_none d-flex mb0">
                                <div class="thumb w150">
                                {% if prod.photo %}
                                    <img class="img-fluid" src="{{ asset('uploads/' ~ prod.photo) }}" alt="{{ prod.photo }}">
                                {% else %}
                                    <img class="img-fluid" src="{{ asset('path/to/default/image.jpg') }}" alt="Default Image">
                                {% endif %}
                            </div>
                                    <div class="details ms-1">
                                        <h6 class="title"><a href="page-car-single-v1.html">{{prod.labelle}}</a></h6>
                                        <h5 class="price">${{prod.prix}}</h5>
                                    </div>
                                </div>
                            </th>
                            <td class="align-middle">{{prod.description}}</td>
                            <td class="align-middle">{{prod.periodeGarantie}}</td>
                            <td class="align-middle">{{prod.type}}</td>
                            <td class="align-middle">{{prod.status}}</td>
                            <td class="editing_list align-middle">
                                <ul>
                                    <li class="list-inline-item mb-1">
                                        <a href="#" data-bs-toggle="tooltip" data-bs-placement="top" title="View"><span class="flaticon-view"></span></a>
                                    </li>
                                    <li class="list-inline-item mb-1">
                                        <a href="{{ path('app_modifier_produit',{'idp':prod.getidproduit()} )}}" data-bs-toggle="tooltip" data-bs-placement="top" title="Edit"><span class="flaticon-trash"></span></a>
                                    </li>
                                    <li class="list-inline-item mb-1">
                                        <a href="{{ path('app_supprimer',{'idp':prod.getidproduit()} )}}" data-bs-toggle="tooltip" data-bs-placement="top" title="Delete"><span class="flaticon-trash"></span></a>
                                    </li>
                                </ul>
                            </td>
                        </tbody>
                        {% endfor %}
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="text-center mt-4">
    <a href="{{ path('app_produit') }}" class="btn btn-primary">Ajouter un produit</a>
</div>
{% endblock %}

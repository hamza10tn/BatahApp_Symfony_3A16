                <td>
                <a href="{{ path('app_service_apres_vente_show', {'idService': service_apres_vente.idService}) }}">show</a>
                    <a href="{{ path('app_service_apres_vente_edit', {'idService': service_apres_vente.idService}) }}">edit</a>
                    <a href="{{ path('app_assign_partner', {'idService': service_apres_vente.idService}) }}">affecter</a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_service_apres_vente_new') }}">Create new</a>

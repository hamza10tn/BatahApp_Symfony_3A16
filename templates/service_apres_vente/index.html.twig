{% extends 'utilisateur/index.html.twig' %}

{% block title %}ServiceApresVente index{% endblock %}

{% block body %}
    <h1>ServiceApresVente index</h1>

    <table class="table">
        <thead>
            <tr>

                <th>Description</th>
                <th>Type</th>
                <th>Date</th>
                <th>Status</th>
                <th>idAchat</th>
                <th>idPartenaire</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for service_apres_vente in service_apres_ventes %}
            <tr>

                <td>{{ service_apres_vente.description }}</td>
                <td>{{ service_apres_vente.type }}</td>
                <td>{{ service_apres_vente.date ? service_apres_vente.date|date('Y-m-d H:i:s') : '' }}</td>

    {% if form_errors(form.achats)|length %}
        <div class="invalid-feedback">
            {{ form_errors(form.achats) }}
        </div>
    {% endif %}
</div>
<div class="h-captcha" data-sitekey="3f8fdf3a-dbd7-4f88-8e5f-54b055b5d51f"></div>
<button class="btn btn-primary" type ="submit" onclick="submitForm()">Save</button>

{{ form_end(form) }}

<script src="https://js.hcaptcha.com/1/api.js" async defer></script>


<script>
    function submitForm() {
        var response = grecaptcha.getResponse();
        if (response.length === 0) {
            alert('Veuillez r√©soudre le reCAPTCHA.');
            return false;
        } else {
            document.getElementById('new_form').submit();
        }
    }
</script>